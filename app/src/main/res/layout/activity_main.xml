<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suhyun.gizi2.MainActivity"
    android:background="#FFFFFF">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/bookmark_white"
            android:padding="5dp"
            android:background="@color/marina"
            android:text="즐겨찾기"
            android:textColor="#FFFFFF"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/recent_white"
            android:background="@color/marina"
            android:padding="5dp"
            android:text="최근검색"
            android:textColor="#FFFFFF"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/search_white"
            android:background="@color/marina"
            android:textColor="#FFFFFF"

            android:padding="5dp"
            android:text="검색"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/board_white"
            android:background="@color/marina"
            android:textColor="#FFFFFF"

            android:padding="5dp"
            android:text="게시판"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/bt_tab5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/man_white"
            android:background="@color/marina"
            android:textColor="#FFFFFF"

            android:padding="5dp"
            android:text="관리자"/>

    </LinearLayout>




</RelativeLayout>
